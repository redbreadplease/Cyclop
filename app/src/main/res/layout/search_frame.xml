<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_frame"
    android:layout_width="match_parent"
    android:layout_height="@dimen/defaultSearchFieldHeight"
    android:layout_marginTop="@dimen/defaultToolbarHeight"
    android:background="@color/background">

    <EditText
        android:id="@+id/search_text_request_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/searchFrameMarginStart"
        android:backgroundTint="@android:color/transparent"
        android:hint="@string/searchFrameHint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxWidth="@dimen/searchFrameMaxWidth"
        android:paddingStart="@dimen/searchFrameHorizontalPadding"
        android:paddingTop="@dimen/searchFrameVerticalPadding"
        android:paddingEnd="@dimen/searchFrameHorizontalPadding"
        android:paddingBottom="@dimen/searchFrameVerticalPadding"
        android:textColor="@color/onSurface"
        android:textColorHint="@color/onSurface"
        android:textSize="@dimen/defaultTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:elevation="2dp"
        android:id="@+id/search_posts_button"
        android:layout_width="@dimen/searchButtonSideSize"
        android:layout_height="@dimen/searchButtonSideSize"
        android:layout_marginEnd="@dimen/searchButtonEndMargin"
        android:background="@drawable/view_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>