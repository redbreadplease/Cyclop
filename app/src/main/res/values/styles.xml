<resources>

    <style name="AppMenuActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:shadowColor">@color/onSurface</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="DebugActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:shadowColor">@color/onSurface</item>
        <item name="android:screenOrientation">sensorPortrait</item>
    </style>

    <style name="NewsBarActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:shadowColor">@color/onSurface</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="GalleryActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:shadowColor">@color/onSurface</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="VRActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:screenOrientation">sensorPortrait</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_view</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/colorC6F</item>
    </style>
</resources>